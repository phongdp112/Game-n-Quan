<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<StackPane fx:id="guidePane" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.controller.GuideController">
   <children>
      <ImageView fx:id="backgroundImageGuide" fitHeight="768.0" fitWidth="1024.0" pickOnBounds="true">
         <image>
            <Image url="@../../image/home_background.jpg" />
         </image>
      </ImageView>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="200.0" opacity="0.7" stroke="BLACK" strokeType="INSIDE" width="600.0" />
      <VBox alignment="CENTER" StackPane.alignment="CENTER">
         <children>
            <Label prefHeight="13.0" prefWidth="518.0" text="Người chơi bấm vào một trong 5 ô quan thuộc bên mình để bắt đầu bốc quân ở một ô tùy thích." wrapText="true" />
            <Label text="Nhấn nút &quot;Right&quot; hoặc &quot;Left&quot; để chọn hướng đi cho quân" wrapText="true" />
            <Label text="Trò chơi kết thúc khi hai ô quan bị ăn hết. " wrapText="true" />
            <Button fx:id="guideCloseButton" maxWidth="100.0" mnemonicParsing="false" text="Đóng" />
         </children>
      </VBox>
   </children>
</StackPane>
